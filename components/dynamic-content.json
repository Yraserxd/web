{
  "name": "Dynamic content",
  "icon": "photo-film",
  "help": "On this component you can use images or a video to describe content from your store based on a title, description text and a button link.",
  "max_usage": null,
  "required": false,
  "tag": "div",
  "classes": "",
  "templates_in": [
    "home",
    "product",
    "category",
    "page",
    "searchresults",
    "contactpage",
    "error"
  ],
  "options": {
    "image_desktop": {
      "name": "Image",
      "type": "image",
      "help": "Recommended size 540x540px"
    },
    "alignment": {
      "name": "Image alignment",
      "type": "select",
      "default": "Left",
      "options": [
        {
          "label": "Left",
          "value": "Left"
        },
        {
          "label": "Right",
          "value": "Right"
        }
      ]
    },
    "title": {
      "name": "Title",
      "type": "input",
      "default": "Section Title"
    },
    "text": {
      "name": "Text",
      "type": "text",
      "default": "You can use this section to describe a store feature, an article or a product."
    },
    "button_link": {
      "name": "Button link",
      "type": "link",
      "default": "/"
    },
    "button_text": {
      "name": "Button text",
      "type": "input",
      "default": "Read more"
    },
    "background": {
      "name": "Background color",
      "type": "color",
      "default": "#FFFFFF"
    },
    "button_color": {
      "name": "Button color",
      "type": "color",
      "default": "#D77D00"
    }
  },
  "mode": "subcomponents",
  "properties": {}
}