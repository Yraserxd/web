{% render 'template_heading' %}

<div class="container-fluid registration">
  <div class="row">
    <div class="col-12">
      <h1 class="page-title text-center">{{ error.title }}</h1>
    </div>
    <section class="col-md-8 offset-sm-2 col-sm-8 col-sm-offset-2 text-center">
      <div class="alert bg-danger text-white" role="alert">
        <p>{{ error.message }}</p>
      </div>
      <div class="text-center page-actions">
        {% if error.link == blank %}
        <a onclick="history.go(-1); return false;" href="#" class="btn primary" title="&larr; {% t 'Go back & Keep Shopping' %}">&larr; {% t "Go back & Keep Shopping" %}</a>
        {% else %}
        <a href="{{ error.link }}" class="btn primary" title="&larr; {% t 'Go back & Keep Shopping' %}">&larr; {% t "Go back & Keep Shopping" %}</a>
        {% endif %}
      </div>
    </section>
  </div>
</div>

