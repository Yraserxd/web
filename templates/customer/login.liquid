{{ index_for_top_components }}

{% render 'template_heading' %}

<div class="container-fluid registration login">
  <div class="row">
    <div class="col-lg-4 offset-lg-4 col-md-6 offset-md-3 col-sm-8 offset-sm-2">
      <h1 class="page-title text-center"><small>{% t 'Login to' %}</small> {{ store.name }}</h1>
      <div class="card mb-4">
        <div class="card-body">
          {{ login_form }}
        </div>
      </div>

      <div id="customer-new">
        <div class=""><h2 class="block-header">{% t 'Are you new at' %} {{ store.name }}?</h2></div>
        <p>{{ options.new_customer_message }}</p>
        <a href="{{ customer_registration_url }}" class="btn secondary btn-block" title="{% t 'Register as Customer' %}">
          {% t 'Sign Up' %}
        </a>
      </div>

    </div>
  </div>
</div>

{{ index_for_bottom_components }}