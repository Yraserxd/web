    "store-whatsapp": {
      "name": "Store WhatsApp",
      "icon": "comment",
      "options": {
        "store_whatsapp": {
          "name": "Enable WhatsApp button",
          "type": "checkbox",
          "help": "Enables a button for WhatsApp, it follows the visitors as they scroll through the website. We recommend not enabling this feature if you are gonna use a plugin or integration that will also display a button.",
          "default": true
        },
        "store_whatsapp_position": {
          "name": "Button position",
          "type": "select",
          "help": "Select the position of the WhatsApp button, which will always be in one of the corners of the store.",
          "default": "bottom-right",
          "options": [
            {
              "label": "Top Right",
              "value": "top-right"
            },
            {
              "label": "Top Left",
              "value": "top-left"
            },
            {
              "label": "Bottom Right",
              "value": "bottom-right"
            },
            {
              "label": "Bottom Left",
              "value": "bottom-left"
            }
          ]
        },
        "store_whatsapp_message": {
          "name": "Call to action message",
          "type": "text",
          "help": "Display a small message to invite your customers to write to you.",
          "default": "Send us a WhatsApp message"
        },
        "store_whatsapp_message_background": {
          "name": "Call to action message - Background",
          "type": "color",
          "default": "#FFFFFF"
        },
        "store_whatsapp_message_hide": {
          "name": "Hide message after close it",
          "type": "slider",
          "help": "Number of days to re-display the message box after customers close it.",
          "default": 0,
          "min": 0,
          "max": 7,
          "step": 1,
          "unit": ""
        },
        "store_whatsapp_color_background": {
          "name": "Button - Background color",
          "type": "color",
          "default": "#25D366"
        },
        "store_whatsapp_color_background_hover": {
          "name": "Button - Background color (hover)",
          "type": "color",
          "default": "#128C7E"
        },
        "store_whatsapp_color_text": {
          "name": "Button - Icon color",
          "type": "color",
          "default": "#FFFFFF"
        }
      }
