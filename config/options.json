    "template-heading": {
      "name": "Template heading",
      "icon": "h1",
      "options": {
        "template_heading_spacing": {
          "name": "Spacing",
          "type": "slider",
          "help": "Allows to define the amount of separating space that the section will have.",
          "default": 32,
          "min": 0,
          "max": 80,
          "step": 8,
          "unit": "px"
        },
        "template_heading_breadcrumbs": {
          "name": "Display breadcrumbs",
          "type": "checkbox",
          "default": true
        },
        "template_heading_title_alignment": {
          "name": "Alignment",
          "type": "select",
          "default": "text-left",
          "options": [
            {
              "label": "Left",
              "value": "text-left"
            },
            {
              "label": "Center",
              "value": "text-center"
            },
            {
              "label": "Right",
              "value": "text-right"
            }
          ]
        },
        "page_date": {
          "name": "Display page creation date",
          "type": "checkbox",
          "default": true
        },
        "page_date_format": {
          "name": "Format of the creation date",
          "type": "select",
          "default": "%d-%m-%Y",
          "options": [
            {
              "label": "dd-mm-yyyy",
              "value": "%d-%m-%Y"
            },
            {
              "label": "mm-dd-yyyy",
              "value": "%m-%d-%Y"
            },
            {
              "label": "yyyy-mm-dd",
              "value": "%Y-%m-%d"
            }
          ]
        }
      }
    },
    "product-block": {
      "name": "Product block",
      "icon": "box",
      "options": {
        "pb_background_color": {
          "name": "Product block background color",
          "type": "color",
          "default": "#FFFFFF"
        },
        "pb_alignment": {
          "name": "Caption alignment",
          "type": "select",
          "default": "text-start",
          "options": [
            {
              "label": "Left",
              "value": "text-start"
            },
            {
              "label": "Center",
              "value": "text-center"
            },
            {
              "label": "Right",
              "value": "text-end"
            }
          ]
        },
        "pb_padding": {
          "name": "Product block padding",
          "type": "slider",
          "default": 3,
          "min": 0,
          "max": 12,
          "step": 3,
          "unit": "px"
        },
        "pb_font_size_scale": {
          "name": "Font size scale",
          "type": "slider",
          "default": 100,
          "min": 80,
          "max": 120,
          "step": 1,
          "unit": "%"
        },
        "pb_border_radius": {
          "name": "Corner radius",
          "type": "slider",
          "default": 0,
          "min": 0,
          "max": 25,
          "step": 1,
          "unit": "px"
        },
        "pb_border_width": {
          "name": "Border width",
          "type": "slider",
          "default": 0,
          "min": 0,
          "max": 5,
          "step": 1,
          "unit": "px"
        },
        "pb_border_color": {
          "name": "Product block border color",
          "type": "color",
          "default": "#DDDDDD"
        },
        "pb_image_display": {
          "name": "Product image display",
          "type": "select",
          "help": "How the product image will be displayed. 1) Resize: adjusts the image dimensions based on the field 'Product Image Dimension'; 2) Thumbnail: fills the image available space with the majority of the product's original image content.",
          "default": "resize",
          "options": [
            {
              "label": "Resize",
              "value": "resize"
            },
            {
              "label": "Thumbnail",
              "value": "thumb"
            }
          ]
        },
        "pb_show_brand": {
          "name": "Show product brand",
          "type": "checkbox",
          "default": false
        },
        "pb_show_sku": {
          "name": "Show product SKU",
          "type": "checkbox",
          "default": false
        },
        "pb_show_buttons": {
          "name": "Show add to cart button",
          "type": "checkbox",
          "help": "Display a direct 'Add to Cart' button. If the product have product options (e.g. size, color), a 'View options' button will be displayed instead.",
          "default": false
        },
        "pb_show_color_options": {
          "name": "Show color options",
          "type": "checkbox",
          "help": "If enabled, when products have a color option, customers can preview the color and the image associated with it.",
          "default": false
        },
        "pb_show_ratings": {
          "name": "Show product ratings",
          "type": "checkbox",
          "default": false
        },
        "pb_show_from_prices": {
          "name": "Show 'from' if price can vary",
          "type": "checkbox",
          "default": true
        },
        "pb_hover_image_scale": {
          "name": "Scale image on hover",
          "type": "checkbox",
          "default": true
        },
        "pb_badge_alignment": {
          "name": "Badge alignment",
          "type": "select",
          "help": "Position where badges will be stacked and displayed.",
          "default": "top-left",
          "options": [
            {
              "label": "Top Left",
              "value": "top-left"
            },
            {
              "label": "Top Right",
              "value": "top-right"
            }
          ]
        },
        "pb_sale_tag_text": {
          "name": "Promotions text",
          "type": "input",
          "default": ""
        },
        "pb_new_tag_age": {
          "name": "New product age",
          "type": "slider",
          "help": "Number of days since the product was created to display the new product tag.",
          "default": 10,
          "min": 0,
          "max": 60,
          "step": 1,
          "unit": ""
        }
      }
