{
  "groups": {
    "general": {
      "name": "General",
      "icon": "cog",
      "options": {
        "disable_shopping_cart": {
          "name": "Disable shopping features",
          "type": "checkbox",
          "help": "If enabled, all Shopping features will hide, like the 'Add to Cart' buttons, the 'Header Cart icon', etc.",
          "default": false
        },
        "disable_prices": {
          "name": "Disable product prices",
          "type": "checkbox",
          "help": "If enabled, all product prices will be hidden. Customers won't be able to see them.",
          "default": false
        },
        "success_page_product_table": {
          "name": "Product table at success page",
          "type": "checkbox",
          "default": false
        },
        "featured_on_search": {
          "name": "Show products for empty searches",
          "type": "checkbox",
          "default": true
        },
        "cross_selling_limit": {
          "name": "Suggested products in the cart page",
          "type": "slider",
          "help": "How many cross-selling products will be displayed on the cart page.",
          "default": 9,
          "min": 3,
          "max": 21,
          "step": 3,
          "unit": ""
        },
        "pp_reviews": {
          "name": "Display product reviews",
          "type": "checkbox",
          "default": true
        }
      }
    },
