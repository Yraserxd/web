      "options": {
        "display_cart_notification": {
          "name": "Add to cart notification",
          "type": "checkbox",
          "help": "Display a message on the page notifying customers that the product was added to the cart. Overrides redirection options in your checkout preferences.",
          "default": true
        },
        "cart_notification_color": {
          "name": "Notification color",
          "type": "color",
          "default": "#079C25"
        },
        "cart_notification_position": {
          "name": "Notification position",
          "type": "select",
          "help": "Allows selecting if the notification will be displayed at the 'top' or 'bottom' of the browser, on the right side.",
          "default": "toast-top-right",
          "options": [
            {
              "label": "Top Right",
              "value": "toast-top-right"
            },
            {
              "label": "Bottom Right",
